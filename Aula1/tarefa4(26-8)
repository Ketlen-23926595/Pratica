OPERAÇÕES 
#include <stdio.h>

int main(){
    float num1, num2,soma,sub, divis,mult;
    int status;
    char opcao;
    refaz:
    printf("Escolha sua operação:");
    scanf("%d",&status);
if (status == 0) {
    printf ("Digite o primeiro numero: ");
    scanf("%f",&num1);
    printf ("Digite o segundo numero: ");
    scanf("%f",&num2);
    soma = num1 + num2;
    printf("O resultado da operacao eh:%f",soma);}

if (status == 1) {
    printf ("Digite o primeiro numero: ");
    scanf("%f",&num1);
    printf ("Digite o segundo numero: ");
    scanf("%f",&num2);
    sub = num1 - num2;
    printf("O resultado da operacao eh:%f",sub);}
    
if (status == 2) {
    printf ("Digite o primeiro numero: ");
    scanf("%f",&num1);
    printf ("Digite o segundo numero: ");
    scanf("%f",&num2);
    mult = num1 * num2;
    printf("O resultado da operacao eh:%f",mult);}
    
if (status == 3) {
    printf ("Digite o primeiro numero: ");
    scanf("%f",&num1);
    printf ("Digite o segundo numero: ");
    scanf("%f",&num2);
    divis = num1 / num2;
    printf("O resultado da operacao eh:%f",divis);
    printf(" Deseja calcular novamente?(S/N");
    scanf("%s",&opcao);}
 
if(opcao=="S"){
    goto refaz;}
    
return 0;
}
